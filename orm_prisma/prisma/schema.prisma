datasource datasource_postgres {
  provider = "postgresql"
  url      = env("POSTGRES_DATABASE_URL")
  // env -> POSTGRES_DATABASE_URL = postgresql://postgres:postgres@localhost:5432/fleet_db?schema=public
  // postgresql://USER:PASSWORD@HOST:PORT/DATABASE?KEY1=VALUE&KEY2=VALUE&KEY3=VALUE
}

generator client {
  provider = "prisma-client-js"
}

model VehicleType {
  id          Int             @id @default(autoincrement())
  name        String          @unique
  vehicle     Vehicle[]
}

model Maintenance {
  id          Int             @id @default(autoincrement())
  odometer    Int
  cost        Decimal
  vehicle     Vehicle         @relation(fields: [vehicleId], references: [id])
  vehicleId   Int
  deletedAt   DateTime?
}

model Refuel {
  id          Int             @id @default(autoincrement())
  volume      Int
  odometer    Int
  cost        Int
  vehicle     Vehicle         @relation(fields: [vehicleId], references: [id])
  vehicleId   Int
  deletedAt   DateTime?
}

model Vehicle {
  id            Int           @id @default(autoincrement())
  plate         String?
  fleet         String
  odometer      Int?
  maintenance   Maintenance[]
  refuel        Refuel[]
  type          VehicleType   @relation(fields: [typeId], references: [id])
  typeId        Int
  user          User          @relation(fields: [userId], references: [id])
  userId        Int
  deletedAt     DateTime?
}

model User {
  id          Int             @id @default(autoincrement())
  name        String
  vehicle     Vehicle[]
  password    Password[]
  deletedAt   DateTime?
}

model Password {
  id          Int             @id @default(autoincrement())
  password    String
  user        User            @relation(fields: [userId], references: [id])
  userId      Int
  deletedAt   DateTime?
}